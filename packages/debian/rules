#!/usr/bin/make -f
# -*- makefile -*-
export DH_VERBOSE=1

%:
	dh $@

build:
	scons $(MAKE_JFLAG) revno=$(GALERA_REVNO) garb/garbd libgalera_smm.so $(SCONS_ARGS)

override_dh_strip:
	dh_strip -pgalera-57-3.x --dbg-package=galera-57-3.x-dbg
	dh_strip -pgalera-garbd-57-3.x --dbg-package=galera-garbd-57-3.x-dbg

override_dh_installinit:
	dh_installinit -pgalera-garbd-57-3.x  --name=galera-garbd-57

.PHONY: override_dh_strip override_dh_installinit
